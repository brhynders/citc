@using ClinicInTheClouds.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<style>
    #loginImageCont {
        border-radius: 10px 10px 0px 0px;
        width: 100%;
        max-width: 510px;
        height: 120px;
        box-shadow: inset 0px -4px 5px #1d70c9;
        border: 3px solid white;
    }

    #loginCont {
        width: 100%;
        max-width: 510px;
        border-radius: 0px 0px 5px 5px;
    }

    .loginClouds {
        background-image: url('../../Content/Images/login-clouds.png');
        background-repeat: no-repeat;
        background-position: center;
        border-radius: 5px 5px 0px 0px;
        width: 100%;
        height: 100%;
    }

    #loginLogoText {
        color: white;
        font-size: 24px;
        font-weight: 300;
    }

    #loginDesc {
        width: 100%;
        font-size: 14px;
        font-weight: 600;
        text-align: center;
        color: white;
    }

    #loginFormCont {
        width: 100%;
        height: auto;
        border: 3px solid white;
        border-top: none;
        background-color: #fff;
        border-radius: 0px 0px 5px 5px;
        box-shadow: inset 0px 0px 5px #bcd8f5;
    }

    #loginFormHeader {
        font-size: 21px;
        color: #103e70;
    }

    .loginDivider {
        height: 1px;
        width: 100%;
        background-color: #d2e5f9;
    }

    .loginWhiteDivider {
        height: 1px;
        width: 80%;
        background-color: #fff;
    }

    .loginInputs {
        width: 100%;
        height: 36px;
        border: 1px solid #bcd8f5;
        border-radius: 3px;
        padding-left: 10px;
    }

    #loginButton {
        cursor:pointer;
        width: 100%;
        height: 42px;
        background-color: #63a4e9;
        color: white;
        text-shadow: 0px 1px 2px #1d70c9;
        font-weight: 600;
        border: 1px solid #4d96e6;
        border-radius: 4px;
    }
    #loginButton:hover {
        background-color: #79b1ec;
    }

    #loginRemPass {
        font-size: 14px;
    }

    .loginRemember {
        width: 14px;
        height: 14px;
    }

    @@media (min-width:992px) {
        #loginFormCont {
            height: 300px;
            border: 3px solid white;
            border-left: none;
            border-radius: 0px 5px 5px 0px;
        }

        #loginImageCont {
            height: 300px;
            border-radius: 5px 0px 0px 5px;
            box-shadow: inset -4px 0px 5px #1d70c9;
        }
    }
</style>
@{ using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" , style="width:auto" }))
    {
        <div style="width:100%;" class="mt-3 mt-lg-5 d-flex flex-column justify-content-center align-items-center">
            <span style="width:auto;height:auto;line-height:20px;">@Html.ValidationSummary(true, "", new { @class = "text-danger", id = "loginValidation" })</span>
            <span style="width:auto;height:auto;line-height:20px;">@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", id = "loginEmailValidation" })</span>
            <span style="width:auto;height:auto;line-height:20px;">@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", id = "loginPasswordValidation" })</span>
        </div>
        <div class="row no-gutters d-flex flex-column flex-lg-row justify-content-center align-items-center mt-1">
            <div id="loginCont" class="col-lg-7 order-1">
                <div id="loginFormCont" class="px-3 py-1 py-lg-2">
                    <div id="loginFormHeader">LOG IN</div>
                    <div class="loginDivider"></div>
                    @Html.AntiForgeryToken()
                    

                    <div class="mt-2">Email:</div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "loginInputs" })
                    

                    <div class="mt-2">Password:</div>
                    @Html.PasswordFor(m => m.Password, new { @class = "loginInputs" })
                    

                    <div id="loginRemPass" class="row no-gutters w-100 py-2">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "loginRemember my-auto" })
                        <div class="ml-1">REMEMBER ME</div>
                        <div class="ml-auto">FORGOT PASSWORD</div>
                    </div>
                    <div class="loginDivider"></div>
                    <input id="loginButton" type="submit" class="my-3" value="LOG IN" />

                </div>
            </div>
            <div id="loginImageCont" class="col-lg-5 order-0 noise-368">
                <div class="loginClouds d-flex flex-column justify-content-center align-items-center p-2">
                    <img src="~/Content/Images/logo.60px.png" class="mt-2" />
                    <div id="loginLogoText" class="jose mt-2">CLINIC IN THE CLOUDS</div>
                    <div class="loginWhiteDivider"></div>
                    <div id="loginDesc" class="d-none d-lg-block mt-2 p-1"><span>Where patients, physicians, caregivers and family members come together to provide real-time support.</span></div>
                </div>
            </div>
        </div>
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}