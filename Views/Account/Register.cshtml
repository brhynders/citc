@model ClinicInTheClouds.Models.RegisterViewModel

<style>
    #regHeader {
        width: 100%;
        background-color: #1d70c9;
        height: 36px;
        border: 3px solid #fff;
        border-radius: 5px 5px 0px 0px;
        border-bottom: none;
        box-shadow: inset 0px 0px 5px #16579c;
        text-shadow: 0px 1px 2px #134b86;
    }
    #regContainer {
        border: 3px solid white;
        padding: 8px;
        height: auto;
        background-color: #fff;
        box-shadow: inset 0px 0px 5px #bcd8f5;
        border-radius:0px 0px 5px 5px;
    }

    .regInputs {
        height: 36px;
        padding-left: 6px;
        border: 1px solid #bcd8f5;
        border-bottom: none;
        box-shadow: inset 0px -2px 0px #a6cbf2;
        border-radius: 3px;
        transition: all .2s ease-in-out;
    }

    .regInputs:focus {
        border: 1px solid #4d96e6;
        border-bottom: none;
        box-shadow: inset 0px -2px 0px #4d96e6;
    }

    .regHeaderDivider {
        height: 1px;
        width: 100%;
        background-color: #bcd8f5;
    }

    #regHeaderText {
        font-size: 21px;
        color: white;
    }

    .regLabelContText {
        width: 100%;
        height: 28px;
        background-color: #4d96e6;
        line-height: 28px;
        font-size: 16px;
        padding-left: 8px;
        color: #fff;
        font-weight: 600;
        border-radius: 3px 3px 0px 0px;
        text-shadow: 0px 1px 2px #16579c;
        box-shadow: inset 0px -2px 10px #1d70c9;
    }

    .regContent {
        background-color: #e9f2fc;
        border-radius: 0px 0px 3px 3px;
        border: 1px solid #4d96e6;
        border-top: none;
    }

    .requiredFormField {
        font-size: 14px;
        color: #d30303;
    }

    .regDropdown {
        color: #a6cbf2;
        font-style: italic;
        font-weight: 600;
    }

        .regDropdown:focus {
            color: black;
            font-style: normal;
            font-weight: 400;
        }
    #regSubmitButton {
        background-color: #207cdf;
        width: 100%;
        height: 42px;
        border: none;
        border-radius: 3px;
        color: white;
        text-shadow: 0px 1px 2px #0d3259;
        border: 1px solid #1963b3;
        font-weight: 600;
    }
    .regBannerImage{
        background-image:url('../../Content/Images/register-clouds.png');
        background-repeat:no-repeat;
        background-position:center;
    }
    .regBanner {
        background-color: #4d96e6;
        width: 100%;
        height: 160px;
        border: 3px solid #fff;
        border-bottom: none;
        border-radius: 5px 5px 0px 0px;
        box-shadow: inset 0px -2px 10px #1d70c9;
    }
    @@media (min-width:768px) {
    #regHeader {
        border-radius: 0px 0px 0px 0px;
    }
    }
</style>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="regBanner regBannerImage d-none d-md-flex flex-column justify-content-center align-items-center mt-4">
        <img src="~/Content/Images/logo.80px.png" width="154" height="80" class="mt-1"/>
        <div style="height:1px; width:220px; background-color:white;" class="mt-2"></div>
        <div class="jose" style="font-size:24px; color:white; font-weight:300;">CLINIC IN THE CLOUDS</div>
    </div>
    <div id="regHeader" class="mt-3 mt-md-0 d-flex flex-row align-items-center pl-2">
        <div id="regHeaderText">REGISTRATION</div>
    </div>
    <div id="regContainer">
        <div class="row no-gutters">
            <div class="col-lg-6 pr-lg-2">
                <div id="regNameContainer" class="mb-2">
                    <div class="regLabelContText">NAME</div>
                    <div class="regContent d-flex flex-row justify-content-between p-2">
                        <div style="width:49%;">
                            @Html.EditorFor(model => model.Fname, new { htmlAttributes = new { @class = "regInputs ", @placeholder = "First Name", @style = "width:100%;" } })
                            @Html.ValidationMessageFor(model => model.Fname, "", new { @class = "requiredFormField" })
                        </div>
                        <div style="width:49%;">
                            @Html.EditorFor(model => model.Lname, new { htmlAttributes = new { @class = "regInputs ", @placeholder = "Last Name", @style = "width:100%;" } })
                            @Html.ValidationMessageFor(model => model.Lname, "", new { @class = "requiredFormField" })
                        </div>
                    </div>
                </div>
                <div id="regLocationContainer" class="mb-2">
                    <div class="regLabelContText">LOCATION</div>
                    <div class="regContent d-flex flex-row justify-content-between p-2">
                        <div style="width:74%;">
                            @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "regInputs", @placeholder = "City", @style = "width:100%" } })
                            @Html.ValidationMessageFor(model => model.City, "", new { @class = "requiredFormField" })
                        </div>
                        <div style="width:24%">
                            <select id="StateDrop" name="State" class="regInputs regDropdown" style="height:36px;width:100%;" required>
                                <option selected="selected" value="State" disabled>State</option>
                                <option value="AL">AL</option>
                                <option value="AK">AK</option>
                                <option value="AZ">AZ</option>
                                <option value="AR">AR</option>
                                <option value="CA">CA</option>
                                <option value="CO">CO</option>
                                <option value="CT">CT</option>
                                <option value="DE">DE</option>
                                <option value="DC">DC</option>
                                <option value="FL">FL</option>
                                <option value="GA">GA</option>
                                <option value="HI">HI</option>
                                <option value="ID">ID</option>
                                <option value="IL">IL</option>
                                <option value="IN">IN</option>
                                <option value="IA">IA</option>
                                <option value="KS">KS</option>
                                <option value="KY">KY</option>
                                <option value="LA">LA</option>
                                <option value="ME">ME</option>
                                <option value="MD">MD</option>
                                <option value="MA">MA</option>
                                <option value="MI">MI</option>
                                <option value="MN">MN</option>
                                <option value="MS">MS</option>
                                <option value="MO">MO</option>
                                <option value="MT">MT</option>
                                <option value="NE">NE</option>
                                <option value="NV">NV</option>
                                <option value="NH">NH</option>
                                <option value="NJ">NJ</option>
                                <option value="NM">NM</option>
                                <option value="NY">NY</option>
                                <option value="NC">NC</option>
                                <option value="ND">ND</option>
                                <option value="OH">OH</option>
                                <option value="OK">OK</option>
                                <option value="OR">OR</option>
                                <option value="PA">PA</option>
                                <option value="RI">RI</option>
                                <option value="SC">SC</option>
                                <option value="SD">SD</option>
                                <option value="TN">TN</option>
                                <option value="TX">TX</option>
                                <option value="UT">UT</option>
                                <option value="VT">VT</option>
                                <option value="VA">VA</option>
                                <option value="WA">WA</option>
                                <option value="WV">WV</option>
                                <option value="WI">WI</option>
                                <option value="WY">WY</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div id="regMobileContainer" class="mb-2">
                    <div class="regLabelContText">Mobile Number: <span style="font-size:11px;">(For notifications via SMS)</span></div>
                    <div class="regContent d-flex flex-row justify-content-between p-2">
                        <div style="width:69%;">
                            <input id="PhoneNumber" name="PhoneNumber" type="text" class="regInputs regMobileNumber" style="width:100%;" placeholder="(123)555-1234" />
                        </div>
                        <select id="MobileCarrierDropDown" name="MobileCarrier" class="regInputs regDropdown ml-2" style="height:36px;width:29%;" required>
                            <option selected="selected" disabled>Mobile Carrier</option>
                            <option value="txt.att.net">AT&T</option>
                            <option value="myboostmobile.com">Boost Mobile</option>
                            <option value="cspire1.com">C-Spire</option>
                            <option value="mailmymobile.net">Consumer Cellular</option>
                            <option value="sms.cricketwireless.net">Cricket</option>
                            <option value="msg.fi.google.com">Google Fi</option>
                            <option value="mymetropcs.com">Metro PCS</option>
                            <option value="vtext.com">Page Plus</option>
                            <option value="text.republicwireless.com">Republic Wireless</option>
                            <option value="messaging.sprintpcs.com">Sprint</option>
                            <option value="tmomail.net">T-Mobile</option>
                            <option value="message.ting.com">Ting</option>
                            <option value="mmst5.tracfone.com">Tracfone</option>
                            <option value="email.uscc.net">U.S. Cellular</option>
                            <option value="vtext.com">Verizon</option>
                            <option value="vmobl.com">Virgin Mobile</option>
                        </select>
                    </div>
                </div>
                <div id="regNotificationsContainer" class="mb-2 mb-lg-0">
                    <div class="regLabelContText">Notifications:</div>
                    <div class="regContent d-flex flex-row justify-content-center align-items-center p-2">
                        <div style="font-size: 14px;color: #16579c;font-weight:600;">Notificiation types:</div>
                        <div style="font-size: 14px;color: #16579c;font-weight:600;">
                            <input id="MobilNotifications" type="checkbox" name="MobilNotifications" value="MobilNotifications" class="ml-3 ml-sm-4 ml-md-5"><span class="ml-1" for="MobilNotifications">Mobile*</span>
                            <input id="EmailNotifiactions"type="checkbox" name="EmailNotifiactions" value="EmailNotifiactions" class="ml-3 ml-sm-4 ml-md-5"><span class="ml-1" for="EmailNotifiactions">Email</span>
                        </div>   
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div id="regIAmContainer" class="mb-2">
                    <div class="regLabelContText">Account Type</div>
                    <div class="regContent d-flex flex-row justify-content-center p-2">
                        <div style="font-size: 18px;color: #16579c;font-weight:600;" class="pt-1">I am a</div>
                        <div>
                            <select id="AccountTypeDropDown" name="AccountType" class="regInputs regDropdown ml-2" style="height:36px;width:160px;" required>
                                <option selected="selected" value="..." disabled>...</option>
                                <option value="Patient">Patient</option>
                                <option value="Physician">Physician</option>
                                <option value="Family Member">Family Member</option>
                                <option value="Care Taker">Caretaker</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div id="regAccountCountainer" class="mb-0 mb-lg-1">
                    <div class="regLabelContText">Account Info</div>
                    <div class="regContent d-flex flex-column justify-content-center p-2">
                        <div>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "regInputs mb-2", @placeholder = "Email", @style = "width:100%;" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "regInputs mb-2", @placeholder = "Password", @style = "width:100%;" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "regInputs", @placeholder = "Confirm Password", @style = "width:100%;" } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div style="font-size: 11px;color: #16579c;font-weight:600;font-style:italic;" class="py-1 pl-2">*Mobile notifications via text message may charge depending on your mobile service.</div>
                <button id="regSubmitButton" type="submit">SUBMIT</button>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}